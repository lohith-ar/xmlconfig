<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="varsha"/>
        <constructor-arg index="1" value="female"/>
        <constructor-arg index="2" value="25"/>
    </bean>
    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="name" value="keerthi"/>
        <constructor-arg name="gender" value="female"/>
        <constructor-arg name="age" value="24"/>
    </bean>
    <bean id="actor3" class="com.stackroute.domain.Actor">
        <constructor-arg type="java.lang.String" value="jagdeesh"/>
        <constructor-arg type="java.lang.String" value="male"/>
        <constructor-arg type="int" value="26"/>
    </bean>

